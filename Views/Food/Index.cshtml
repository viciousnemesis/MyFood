@{
    ViewData["Title"] = "My Food";
}


<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Food List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="Food" class="btn btn-info form-control text-white">
            Add New Food
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>ServingSize</th>
                    <th>Carbs</th>
                    <th>Protein</th>
                    <th>Fat</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts{
    <script src="~/js/foodList.js"></script>
}