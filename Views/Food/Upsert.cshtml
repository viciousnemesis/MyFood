@model MyFood.Models.Food

<br />
<h2 class="text-info">@(Model.Id != null ? "Edit" : "Create") Food</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post" asp-action="upsert">
        @if (Model.Id != null)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ServingSize">Serving Size</label>
            </div>
            <div class="col-6">
                <input asp-for="ServingSize" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Carb"></label>
            </div>
            <div class="col-6">
                <input asp-for="Carb" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Protein"></label>
            </div>
            <div class="col-6">
                <input asp-for="Protein" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Fat"></label>
            </div>
            <div class="col-6">
                <input asp-for="Fat" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Id != null ? "Update" : "Create")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>

    </form>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
